<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="kr.spring.workflow.dao.WorkflowMainMapper">  
  	<select id="selectRowCount" parameterType="map"
  	                    resultType="integer">
		 SELECT
		  COUNT(*)
		FROM workflow_main b JOIN member m
		ON b.mem_num = m.mem_num
		<where>
			<if test="keyword != null and keyword != ''">
				<if test="keyfield == 1">
					b.flow_title LIKE '%' || #{keyword} || '%'
				</if>
				<!-- <if test="keyfield == 2">
					m.id LIKE '%' || #{keyword} || '%' OR
					m.nick_name LIKE '%' || #{keyword} || '%'
				</if>
				<if test="keyfield == 3">
					b.content LIKE '%' || #{keyword} || '%'
				</if>
				<if test="keyfield == 4">
					b.title LIKE '%' || #{keyword} || '%' OR
					b.content LIKE '%' || #{keyword} || '%'
				</if> -->
			</if>
		</where>   	
  	</select>
  	<select id="selectList" parameterType="map"
  	                         resultType="workflowMainVO">
  		 SELECT
  		   *
  		FROM (SELECT
  		        a.*,
  		        rownum rnum
  		      FROM (SELECT
  		              b.flow_num,
  		              <![CDATA[
  		              REPLACE(REPLACE(b.flow_title,'<','&lt;'),'>','&gt;') flow_title,
  		              ]]>
  		              b.flow_content,
  		              b.flow_date,
  		              b.flow_sort,
  		              b.flow_state,
  		              b.flow_start,
  		              b.flow_end,
  		              b.flow_subsort, 		           
  		              b.mem_num,
  		              m.mem_name,
  		              c.mem_rank,
  		              d.mem_dpt
  		            FROM workflow_main b JOIN member_detail m
  		            ON b.mem_num = m.mem_num
  		            JOIN mem_rank c 
                    ON m.mem_rank_num = c.mem_rank_num
                    join mem_dpt d
					ON m.mem_dpt_num = d.mem_dpt_num 
  		             <where>
						<if test="keyword != null and keyword != ''">
							<if test="keyfield == 1">
								b.flow_title LIKE '%' || #{keyword} || '%'
							</if>
							<!-- <if test="keyfield == 2">
								m.id LIKE '%' || #{keyword} || '%' OR
								m.nick_name LIKE '%' || #{keyword} || '%'
							</if>
							<if test="keyfield == 3">
								b.content LIKE '%' || #{keyword} || '%'
							</if>
							<if test="keyfield == 4">
								b.title LIKE '%' || #{keyword} || '%' OR
								b.content LIKE '%' || #{keyword} || '%'
							</if> -->
						</if>
					</where>  
  		            ORDER BY b.flow_num DESC)a)
  		<![CDATA[
  		WHERE rnum >= #{start} AND rnum <= #{end}
  		]]> 
  	</select>
  	
  	<!-- 글수정 -->
  	<update id="updateBoard" parameterType="workflowMainVO">
  		<!-- UPDATE spboard SET
  		    <if test="filename != ''">
  		    uploadfile=#{uploadfile},
  		    filename=#{filename},
  		    </if>
  			title=#{title},
  			content=#{content},
  		    ip=#{ip},
  		    modify_date=SYSDATE
  		WHERE board_num=#{board_num} -->
  	</update>
  	
  	
  	<!-- 
  	게시판 결재라인 등록
	 <insert id="insertSign">
		insert into workflow_sign (sign_num, sign_no, sign_name,mem_num)  
		values(workflow_sign_seq.nextval, #{sign_no}, #{sign_name}, #{mem_num} )
	</insert>
	  -->
</mapper>







