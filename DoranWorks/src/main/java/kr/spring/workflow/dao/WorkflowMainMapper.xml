<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="kr.spring.workflow.dao.WorkflowMainMapper">  
  	<select id="selectRowCount" parameterType="map"
  	                    resultType="integer">
		 SELECT
		  COUNT(*)
		FROM workflow_main b JOIN member m
		ON b.mem_num = m.mem_num
		<where>
			<if test="keyword != null and keyword != ''">
				<if test="keyfield == 1">
					b.flow_title LIKE '%' || #{keyword} || '%'
				</if>
				<!-- <if test="keyfield == 2">
					m.id LIKE '%' || #{keyword} || '%' OR
					m.nick_name LIKE '%' || #{keyword} || '%'
				</if>
				<if test="keyfield == 3">
					b.content LIKE '%' || #{keyword} || '%'
				</if>
				<if test="keyfield == 4">
					b.title LIKE '%' || #{keyword} || '%' OR
					b.content LIKE '%' || #{keyword} || '%'
				</if> -->
			</if>
		</where>   	
  	</select>
  	<select id="selectList" parameterType="map"
  	                         resultType="WorkflowMainVO">
  		 SELECT
  		   *
  		FROM (SELECT
  		        a.*,
  		        rownum rnum
  		      FROM (SELECT
  		              b.flow_num,
  		              <![CDATA[
  		              REPLACE(REPLACE(b.flow_title,'<','&lt;'),'>','&gt;') flow_title,
  		              ]]>
  		              b.flow_date,
  		              b.flow_modify,
  		              b.flow_sort,
  		              b.mem_num,
  		              m.id
  		            FROM workflow_main b JOIN member m
  		            ON b.mem_num = m.mem_num
  		             <where>
						<if test="keyword != null and keyword != ''">
							<if test="keyfield == 1">
								b.flow_title LIKE '%' || #{keyword} || '%'
							</if>
							<!-- <if test="keyfield == 2">
								m.id LIKE '%' || #{keyword} || '%' OR
								m.nick_name LIKE '%' || #{keyword} || '%'
							</if>
							<if test="keyfield == 3">
								b.content LIKE '%' || #{keyword} || '%'
							</if>
							<if test="keyfield == 4">
								b.title LIKE '%' || #{keyword} || '%' OR
								b.content LIKE '%' || #{keyword} || '%'
							</if> -->
						</if>
					</where>  
  		            ORDER BY b.flow_num DESC)a)
  		<![CDATA[
  		WHERE rnum >= #{start} AND rnum <= #{end}
  		]]> 
  	</select>
  	
  	<!-- 글수정 -->
  	<update id="updateBoard" parameterType="WorkflowMainVO">
  		<!-- UPDATE spboard SET
  		    <if test="filename != ''">
  		    uploadfile=#{uploadfile},
  		    filename=#{filename},
  		    </if>
  			title=#{title},
  			content=#{content},
  		    ip=#{ip},
  		    modify_date=SYSDATE
  		WHERE board_num=#{board_num} -->
  	</update>
  	
</mapper>







